{
  "name": "@grunnverk/ai-service",
  "version": "1.5.7-dev.0",
  "description": "AI-powered content generation for automation - OpenAI integration with structured prompts",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "examples",
    "guide"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grunnverk/ai-service.git"
  },
  "scripts": {
    "build": "npm run lint && tsc --noEmit && vite build",
    "dev": "vite",
    "watch": "vite build --watch",
    "test": "rm -rf coverage && vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rm -rf dist",
    "precommit": "npm run lint && npm run build && npm run test",
    "prepublishOnly": "npm run clean && npm run lint && npm run build && npm run test"
  },
  "keywords": [
    "ai",
    "openai",
    "llm",
    "prompt-engineering",
    "content-generation",
    "automation",
    "gpt",
    "commit-messages",
    "release-notes"
  ],
  "author": "Tim O'Brien <tobrien@discursive.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "undici": "^7.20.0",
    "@grunnverk/git-tools": "^1.5.15",
    "@google/generative-ai": "^0.24.1",
    "@kjerneverk/execution": "^1.0.5",
    "@kjerneverk/execution-anthropic": "^1.0.6",
    "@kjerneverk/execution-gemini": "^1.0.6",
    "@kjerneverk/execution-openai": "^1.0.7",
    "@kjerneverk/riotprompt": "^1.0.9",
    "openai": "^6.3.0",
    "semver": "^7.7.2"
  },
  "peerDependencies": {
    "winston": "^3.17.0"
  },
  "peerDependenciesMeta": {
    "winston": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@swc/core": "^1.13.3",
    "@types/node": "^24.10.1",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.13",
    "esbuild": "0.27.2",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "mockdate": "^3.0.5",
    "typescript": "^5.9.2",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-node": "^7.0.0",
    "vitest": "^4.0.13",
    "winston": "^3.17.0"
  }
}
